<div class="container-lg mt-5">
        <div id="containerContact" class="m-auto">
            <h1 style="color: white;" class="fw-bolder text-center" id="h1-">GET IN TOUCH</h1>
            
            <form id="formContact" class="fs-4" action="/contact-me" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input
                     type="text" name="name" class="form-control fs-4" id="name" placeholder="Your Name" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input
                     type="email" class="form-control fs-4" id="email" name="email" placeholder="name@example.com" required>
                </div>
                <div class="mb-3">
                    <label for="phoneNumber" class="form-label">Phone Number</label>
                    <input type="text" name="phoneNumber" class="form-control fs-4" id="phoneNumber" placeholder="08XXXXXXXXXXX" required>
                </div>
                <div class="mb-3">
                    <label for="subject" class="form-label">Subject</label>
                    <select class="form-select fs-4" name="subject" id="subject" aria-label="Default select example" required>
                    <option hidden>Choose here</option>
                        <option value="I'm Looking for candidate">I'm looking for candidates</option>
                        <option value="Interview">Interview</option>
                        <option value="I'm looking for commercial project">I'm looking for commercial project</option>
                        <option value="Maintance our web application">Maintance our web application</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Message</label>
                    <textarea class="form-control fs-4" id="message" name="message" style="resize: none;" placeholder="Your Message" rows="3" required></textarea>
                </div>
                <div class="d-flex justify-content-end mb-5">
                    <button type="submit" id="button" class="btn rounded-pill px-5 mt-3 fs-5">Submit</button>
                </div>

            </form>
